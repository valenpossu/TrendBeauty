
@{
    ViewBag.Title = "Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda Online</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .product {
            border: 1px solid #ddd;
            padding: 10px;
            margin: 10px;
            display: inline-block;
            width: 200px;
            text-align: center;
        }

            .product img {
                width: 100px;
                height: 100px;
            }

        .cart {
            border: 1px solid #000;
            padding: 10px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Tienda Online</h1>
    <div id="products">
        <div class="product">
            <img src="https://via.placeholder.com/100" alt="Producto 1">
            <p>Producto 1</p>
            <p>$10.00</p>
            <button onclick="addToCart('Producto 1', 10)">Agregar al Carrito</button>
        </div>
        <div class="product">
            <img src="https://via.placeholder.com/100" alt="Producto 2">
            <p>Producto 2</p>
            <p>$15.00</p>
            <button onclick="addToCart('Producto 2', 15)">Agregar al Carrito</button>
        </div>
        <div class="product">
            <img src="https://via.placeholder.com/100" alt="Producto 2">
            <p>Producto 2</p>
            <p>$15.00</p>
            <button onclick="addToCart('Producto 3', 15)">Agregar al Carrito</button>
        </div>
        <div class="product">
            <img src="https://via.placeholder.com/100" alt="Producto 2">
            <p>Producto 2</p>
            <p>$15.00</p>
            <button onclick="addToCart('Producto 4', 15)">Agregar al Carrito</button>
        </div>
        <div class="product">
            <img src="https://via.placeholder.com/100" alt="Producto 2">
            <p>Producto 2</p>
            <p>$15.00</p>
            <button onclick="addToCart('Producto 5', 15)">Agregar al Carrito</button>
        </div>
    </div>

    <div class="cart">
        <h2>Carrito de Compras</h2>
        <ul id="cart-items"></ul>
        <p>Total: $<span id="total">0</span></p>
    </div>

    <script>
        let total = 0;
        function addToCart(product, price) {
            const cartItems = document.getElementById('cart-items');
            const item = document.createElement('li');
            item.textContent = `${product} - $${price}`;
            cartItems.appendChild(item);
            total += price;
            document.getElementById('total').textContent = total.toFixed(2);
        }
    </script>
</body>
</html>

