
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item active">Mantenedor</li>
    <li class="breadcrumb-item"><a href="@Url.Action("Productos","Mantenedor")">Productos</a></li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fa fa-users me-1"></i> Lista de Productos
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />
        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Costo</th>
                    @*<th>Stock</th>*@
                    <th>Fecha Compra</th>
                    <th>Categoria</th>
                    <th>Observaciones</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="txtId" type="hidden" value="0" />
                <input id="txtIdUsuario" type="hidden" />

                <form id="Contenedor" class="row">

                    <div class="col-sm-6">
                        <label for="txtNombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="txtNombre" autocomplete="off" name="nombre">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtDescripcion" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="txtDescripcion" autocomplete="off" name="Descripcion">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtCosto" class="form-label">Costo</label>
                        <input type="text" class="form-control" id="txtCosto" autocomplete="off" name="Costo">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtStock" class="form-label">Stock</label>
                        <input type="text" class="form-control" id="txtStock" autocomplete="off" name="Stock">
                    </div>
                    <div class="col-sm-6">
                        <label for="cboCategoria" class="form-label">Categoria</label>
                        <select class="form-select" id="cboCategoria">
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label for="cboActivo" class="form-label">Activo</label>
                        <select class="form-select" id="cboActivo">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label for="txtFecha" class="form-label">Fecha</label>
                        <input type="datetime" class="form-control" id="txtFecha" name="fecha" />
                    </div>
                    <div class="col-sm-6">
                        <label for="txtObservaciones" class="form-label">Observaciones</label>
                        <input type="text" class="form-control" id="txtObservaciones" value="No Aplica" autocomplete="off">
                    </div>

                </form>

                @*mensaje de alerta*@
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>

        var tabladata; //almacenar el data table
        var filaSeleccionada;

        $(document).ready(function () {

            //mostrar calendario en el input
            $("#txtFecha").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date());

        });

        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarProductos", "Mantenedor")',//url para hacer el llamado a una accion
                type: "GET",
                dataType: "json",
            },
            "columns": [
                { "data": "Nombre" },
                { "data": "Descripcion" },
                { "data": "Costo" },
                //{
                //    "data": "Stock"
                //},
                { "data": "FechaCompra" },
                {
                    "data": "oCategoria", "render": function (data) {
                        return data.Nombre
                    }

                },
                {
                    "data": "Observaciones"
                },
                {
                    "data": "Activo", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">Si</span>'
                        } else {
                            return '<span class="badge bg-danger">No</span>'
                        }
                    }

                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fa fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fa fa-trash"></i></button>',
                    "orderable": false,
                    "searchdable": false,
                    "width": "90px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json"
            }
        }); //convierte la tabla en un datatable

        jQuery.ajax({
            url: '@Url.Action("ListarCategorias", "Mantenedor")',//url para hacer el llamado a una accion
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                $("<option>").attr({ "value": "0", "disable": "true" }).text("Seleccionar").appendTo("#cboCategoria"); //valor por defecto

                $.each(data.data, function (index, item) { //index es el numero de registros que existen en la lista, y item: valor de cada uno de los elementos.
                    $("<option>").attr({ "value": item.IdCategoria }).text(item.Nombre).appendTo("#cboCategoria"); //option la etiqueta del select; appendTo: 'asignar a' -> al select cbomarca
                }) //recorrer toda la lista de marcas; iterar una lista; el primer data(hace referencia a este function (data) y el otro data (hace referencia al data del metodo del controlador data = oLista )
            },
            error: function (error) {
                console.log(error)
            }
        });

        function abrirModal(json) {//recibe un objecto de tipo json

            $("#txtId").val(0);
            $("#txtIdUsuario").val("@Session["IdUsuario"]");
            $("#txtNombre").val("");
            $("#txtDescripcion").val("");
            $("#txtCosto").val("");
            $("#cboCategoria").val($("#cboCategoria option:first").val());
            $("#cboActivo").val(1);
            $("#txtObservaciones").val("No Aplica");
            $("#txtFecha").val("");
            $("#txtStock").val("");

            $("#mensajeError").hide();


            if (json != null) {

                $("#txtId").val(json.IdProducto);
                $("#txtIdUsuario").val("@Session["IdUsuario"]");
                $("#txtNombre").val(json.Nombre);
                $("#txtDescripcion").val(json.Descripcion);
                $("#txtCosto").val(json.Costo);
                $("#cboCategoria").val(json.oCategoria.IdCategoria);
                $("#cboActivo").val(json.Activo == true ? 1 : 0);
                $("#txtObservaciones").val(json.Observaciones);
                $("#txtFecha").val(json.FechaCompra);
                $("#txtStock").val(json.Stock);

            }
            $("#FormModal").modal("show")
        }

        //declaracion de un formato; expresiones regulaares en javascript son patrones que se utilizan para hacer coincidor combinaciones de letras o numeros en cadenas

        jQuery.validator.addMethod("preciodecimal", function (value, element) {
            return this.optional(element) || /^\d{0,4}(\.\d{0,2})?$/i.test(value);
        }, "El formato correcto del precio es ##.##");

        //validacion de los campos que se requieren para crear o editar un producto
        //usamos el form que tiene id 'Contenedor' y la propiedad 'name' de cada input es la que usamos para validar que los campos sean requeridos
        //$("#Contenedor").validate({
        //    rules: {
        //        nombre: {
        //            required: true
        //        },
        //        Descripcion: {
        //            required: true
        //        },
        //        Costo: {
        //            required: true,
        //            preciodecimal: true
        //        },
        //        Stock: {
        //            required: true,
        //            number: true
        //        }
        //    },
        //    //mensaje que debe aparecer si no se cumplen las reglas
        //    messages: {
        //        nombre: "- El campo Nombre es Obligatorio",
        //        Descripcion: "- El campo Descripcion es Obligatorio",
        //        Precio: { required: "- El campo Precio es Obligatorio", preciodecimal: "- El formato correcto del precio es ##.##" },
        //        Stock: { required: "- El campo Stock es Obligatorio", preciodecimal: "- Debe Ingresar Solo Numeros en el Stock" }
        //    },
        //    //Donde se van a mostrar los mensajes
        //    errorElement: "div",
        //    errorLabelContainer: ".alert-danger"
        //});

        function Guardar() {

            //llamamos el metodo de las validaciones que hicimos mas arriba
            if (!$("#Contenedor").valid()) { //si no se cumplieron las reglas hasta allí queda y no va a continuar guardando el producto
                return;
            }

            var Producto = {
                IdProducto: $("#txtId").val(),
                Nombre: $("#txtNombre").val(),
                Descripcion: $("#txtDescripcion").val(),
                Costo: $("#txtCosto").val(),
                oCategoria: {
                    IdCategoria: $("#cboCategoria option:selected").val(), //obtenemos el option que este seleccionado
                    Nombre: $("#cboCategoria option:selected").text()
                },
                Activo: $("#cboActivo").val() == 1 ?true: false, // val sirve para obtener un valor y asignar ese valor
                Observaciones: $("#txtObservaciones").val(),
                FechaCompra: $("#txtFecha").val(),
                Stock: $("#txtStock").val(),
                IdUsuario: $("#txtIdUsuario").val()
            }

             jQuery.ajax({
                url: '@Url.Action("GuardarProducto", "Mantenedor")',//url para hacer el llamado a una accion
                type: "POST", //el tipo
                data: JSON.stringify({ oProducto: Producto }), //stringify: convierte el json a texto //el objeto que se va a enviar; el nombre del objeto debe ser el mismo declarado en el controlador (oUsuario)
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                //Metodos de ajax; success uando todo es exitoso, error cuando no lo fue y beforeSend: acciones que se van a ejecutar antes y durante la ejecucion del metodo guardar
                success: function (data) {
                     //data (puede ser cualquier nombre, generalmente se pone data),  data es todo el json que se creo en el controlador (Json(new { resultado = Resultado, mensaje = Mensaje})

                    $(".modal-body").LoadingOverlay("hide"); //para que se oculte el 'cargando..'

                    //USUARIO NUEVO
                    if (Producto.IdProducto == 0) {

                        if (data.Resultado != 0) { //Cuando se ha creado el Producto, el metodo registrar nos devuelve el id del cliente creado; ese valor se almacena en resultado
                            Producto.IdProducto = data.Resultado;
                            tabladata.row.add(Producto).draw(false); //pinta el nuevo Producto en la tabla
                            $("#FormModal").modal("hide"); //ocultamos el modal
                        }
                        else {
                            $("#mensajeError").text(data.Mensaje);
                            $("#mensajeError").show();
                        }

                    } else {

                        if (data.Resultado) {

                            //USUARIO EDITAR
                            tabladata.row(filaSeleccionada).data(Producto).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");
                        }
                        else {
                            $("#mensajeError").text(data.Mensaje);
                            $("#mensajeError").show();
                        }


                    }
                 },
                 error: function (data) {

                     $(".modal-body").LoadingOverlay("hide"); //para que se oculte el 'cargando..'
                     $("#mensajeError").text("Error Ajax");
                     $("#mensajeError").show();
                 },
                 beforeSend: function () {
                     $(".modal-body").LoadingOverlay("show", { //libreria LoadingOverlay es la que permite mostrar que algo esta cargando
                         imageResizeFactor: 2,
                         text: "Cargando...",
                         size: 14
                     });
                 }
             })
        }

        //BOTON PARA EDITAR
        $("#tabla tbody").on("click", '.btn-editar', function () {
            filaSeleccionada = $(this).closest("tr") //obtener la fila que ha sido seleccionada
            var data = tabladata.row(filaSeleccionada).data() //Obtenemos la informacion de la fila
            abrirModal(data) //el metodo abrir modal esta recibiendo los datos de la fila seleccionada
        }) //cada que se haga click en el boton con la clase 'btn-editar' hará una funcion

        //BOTON PARA ELIMINAR
        $("#tabla tbody").on("click", '.btn-eliminar', function () {
            productoSeleccionado = $(this).closest("tr") //obtener la fila que ha sido seleccionada
            var data = tabladata.row(productoSeleccionado).data() //Obtenemos la informacion de la fila
            /*console.log(tabladata.row(usuarioSeleccionado).data())*/

            //la alerta, el mensaje de eliminar
            swal({
                title: "Eliminar",
                text: "Desea Eliminar El Producto?",
                type: 'warning',
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "SI",
                cancelButtonText: "NO",
                closeOnConfirm: true
            },
                function () {

                     jQuery.ajax({
                        url: '@Url.Action("EliminarProducto", "Mantenedor")',//url para hacer el llamado a una accion
                         type: "POST",
                         data: JSON.stringify({ id: data.IdProducto }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                         success: function (data) {
                             if (data.resultado) {

                                 tabladata.row(productoSeleccionado).remove().draw();

                             } else{

                                 swal({ title: "No se pudo eliminar", text: data.Mensaje, type: "error" })
                             }
                         },
                         error: function (error) {
                             console.log(error)
                         }
                    })
             });
        }) //cada que se haga click en el boton con la clase 'btn-eliminar' hará una funcion
    </script>
}